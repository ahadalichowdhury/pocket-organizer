{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/", "destination": "/website/index.html" },
    { "source": "/about", "destination": "/website/about.html" },
    {
      "source": "/favicon.ico",
      "destination": "/website/assets/icons/app_icon.png"
    },
    {
      "source": "/favicon.png",
      "destination": "/website/assets/icons/app_icon.png"
    },
    { "source": "/(.*)", "destination": "/website/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [{ "key": "X-Content-Type-Options", "value": "nosniff" }]
    }
  ]
}
