{
  "cleanUrls": true,
  "trailingSlash": false,
  "builds": [{ "src": "website/**", "use": "@vercel/static" }],
  "routes": [
    { "src": "^/$", "dest": "/website/index.html" },
    { "src": "^/about$", "dest": "/website/about.html" },
    { "src": "^(.*)$", "dest": "/website$1" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [{ "key": "X-Content-Type-Options", "value": "nosniff" }]
    }
  ]
}
